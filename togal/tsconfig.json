{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS",
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "outDir": "./dist", 
    "rootDir": "./src" ,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}